<%= form_tag('/search', method: 'post') do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search by class ID" %>
        <!-- In order to have the "search" icon in the button, we need to use plain HTML instead 
           of using a Rails form helper -->
    <button class="btn" type="submit"><i class="icon-search">Search</i></button>
  </div>
<% end %>

<script>
$('#search').on('keyup', function() {
    if(this.value.length > 1) {
        // Send off a search and display the results
        console.log(this.value);
    }
});
</script>
<%= yield %>